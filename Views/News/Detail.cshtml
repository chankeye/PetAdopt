@{
    Layout = "../Shared/_Layout.cshtml";

}
@section Scripts
{
    <script src="../../Scripts/ctrls/NewsDetailCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h2>消息詳細資訊</h2>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">封面圖</label>
            <div class="col-sm-4">
                <img id="coverPhoto" name="coverPhoto" alt="封面圖" class="img-responsive img-thumbnail" src="../../Content/Images/default.jpg">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">標題</label>
            <div class="col-sm-4">
                <label id="title" name="title"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">內容</label>
            <div class="col-sm-4">
                <label id="content" name="content"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地區</label>
            <div class="col-sm-4">
                <label id="selOptionsAreas" name="selOptionsAreas"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">消息來源</label>
            <div class="col-sm-4">
                <label id="source" name="source"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn2" type="button" class="btn btn-primary">返回</button>
            </div>
        </div>
    </div>
    <hr />
    @Html.Partial("_Message")
</div>