@{
    ViewBag.Title = "部落格";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="/Areas/Manage/Scripts/ctrls/BlogCtrl.js"></script>
}
<div class="page-header">
    <h2>新增文章</h2>
</div>
<div>
    <form id="commentForm" class="form-horizontal" method="POST" name="form1">
        <legend class="text-info">
            <i class="fa fa-check"></i>
            必填欄位
        </legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">標題</label>
            <div class="col-sm-4">
                <input id="title" name="title" class="form-control required" maxlength="50" placeholder="請輸入標題" required autofocus />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">內容</label>
            <div class="col-sm-4">
                <textarea id="content" name="content" class="form-control ckeditor"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">分類</label>
            <div class="col-sm-4">
                <select id="selOptions" class="form-control required"
                        data-bind="options: classes, optionsText: 'Word', optionsValue: 'Id'"></select>
            </div>
        </div>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            選填欄位
        </legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">動物編號</label>
            <div class="col-sm-4">
                <input id="animalId" name="animalId" class="form-control" placeholder="請輸入動物編號 或 輸入認養動物標題進行查詢" />
            </div>
            (如與本站送養動物有關，建議填入編號，進行連結)
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn1" type="button" class="btn btn-primary" data-loading-text="處理中...">新增</button>
                <button id="btn2" type="reset" class="btn btn-default">清除</button>
            </div>
        </div>
    </form>

    <hr />

    <div class="page-header">
        <h2>文章管理</h2>
    </div>
    <input id="search" name="search" type="search" placeholder="請輸入文章標題" />
    <button id="btn3" type="button" data-loading-text="查詢中...">查詢</button>
    <br />
    <input id="checkAll" name="checkAll" type="checkbox" />
    <label for="checkAll">完全比對</label>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>序號</th>
                <th>標題</th>
                <th>日期</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: history">
            <tr>
                <td><a href='#' data-bind="click: $root.removeBlog">移除</a></td>
                <td><a href='#' data-bind="click: $root.editBlog">編輯</a></td>
                <td><span data-bind="text: Id"></span></td>
                <td><span data-bind="text: Title"></span></td>
                <td><span data-bind="text: Date"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    <div class="pagination clearfix">
        <span class="prev"><a href="#">&lt;&lt; Previous</a></span>
        <ul class="pagi"></ul>
        <span class="next"><a href="#">Next &gt;&gt;</a></span>
    </div>
    <!--pagination-->
</div>
