@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/AccountNewsCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h2>發佈過的消息</h2>
    </div>
    <div class="navbar-right">
        <button id="btn2" type="button" class="btn btn-primary">返回</button>
    </div>
    @Html.Partial("_Search")
    <div data-bind="foreach: history">
        <div class="row warp">
            <div class="navbar-right">
                <a href='#' data-bind="click: $root.editNews" class="btn btn-primary">編輯</a>
                <a href='#' data-bind="click: $root.removeNews" class="btn btn-danger">移除</a>
            </div>
            <div class="col-md-5 list-img">
                <a href="#" data-bind="click: $root.detail">
                    <div data-bind="if:Photo">
                        <img alt="封面圖" class="img-responsive" data-bind="attr:{src: '../../Content/uploads/' + Photo}">
                    </div>
                    <div data-bind="ifnot:Photo">
                        <img alt="封面圖" class="img-responsive" src="../../Content/Images/default.jpg">
                    </div>
                    @*<img class="img-responsive" src="http://placehold.it/700x300" alt="">*@
                </a>
            </div>
            <div class="col-md-7 list-text">
                <h3><a href="#" data-bind="text: Title, click: $root.detail"></a></h3>
                <h4><label data-bind="text: Date"></label> - <label data-bind="text: Area"></label></h4>
                <p><label class="list-msg" data-bind="html: Message"></label></p>
                <a class="btn btn-primary" href="#" data-bind="click: $root.detail">詳細內容 <span class="glyphicon glyphicon-chevron-right"></span></a>
            </div>
        </div>
        <hr>
    </div>
    <div data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></div>
    <!--pagination-->
    @Html.Partial("_Pagination")
    <!--pagination-->
</div>