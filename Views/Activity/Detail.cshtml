@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/ActivityDetailCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h2>活動詳細資訊</h2>
    </div>
    <div class="col-sm-offset-2 col-sm-10 ">

        <!-- Blog Post -->
        <!-- Title -->
        <h1><label id="title" name="title"></label></h1>

        <!-- Author -->
        <p>
            作者 <a href="#"><label id="userDisplay" name="userDisplay"></label></a>
            / 地區 <a href="#"><label id="selOptionsAreas" name="selOptionsAreas"></label></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> 發佈時間 <label id="date" name="date"></label></p>

        <hr>

        <!-- Preview Image -->
        @*<img class="img-responsive" src="http://placehold.it/900x300" alt="">*@
        <img id="coverPhoto" name="coverPhoto" alt="封面圖" class="img-responsive img-thumbnail fullImage" src="../../Content/Images/default.jpg">
        <hr>

        <!-- Post Content -->
        <p class="lead">
            <label id="content" name="content"></label>
        </p>
        <p>
            地址：<label id="address" name="address"></label>
        </p>
        
        <br>
        <button id="btn2" type="button" class="btn btn-default">返回</button>

        <hr>

    </div>

    @Html.Partial("_Message")
</div>