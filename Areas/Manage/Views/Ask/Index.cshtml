@{
    ViewBag.Title = "問與答";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="/Areas/Manage/Scripts/ctrls/AskCtrl.js"></script>
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <legend class="text-info">
        <i class="fa fa-check"></i>
        問與答管理
    </legend>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>序號</th>
                <th>標題</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: history">
            <tr>
                <td><a href='#' data-bind="click: $root.removeAsk">移除</a></td>
                <td><span data-bind="text: Id"></span></td>
                <td><span data-bind="text: Title"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td class="" colspan="6" data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    <div class="pagination clearfix">
        <span class="prev"><a href="#">&lt;&lt; Previous</a></span>
        <ul class="pagi"></ul>
        <span class="next"><a href="#">Next &gt;&gt;</a></span>
    </div>
    <!--pagination-->
</div>
