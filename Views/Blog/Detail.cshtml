@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/BlogDetailCtrl.js"></script>
}
<div class="container">
    <div class="page-header">
        <h2>文章詳細內容</h2>
    </div>
    <div class="col-sm-offset-2 col-sm-10 ">

        <!-- Blog Post -->
        <!-- Title -->
        <h1><label id="title" name="title"></label></h1>

        <!-- Author -->
        <p>
            作者 <a href="#"><label id="userDisplay" name="userDisplay"></label></a>
            / 分類 <a href="#"><label id="selOptionsClasses" name="selOptionsClasses"></label></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> 發佈時間 <label id="date" name="date"></label></p>

        <hr>

        <!-- Post Content -->
        <p class="lead">
            <label id="content" name="content"></label>
        </p>
        
        <p>
            文章相關動物(故事的主角就是它啦)：<a href="#" id="animalId" name="animalId"></a>
        </p>
        
        <br>
        <button id="btn2" type="button" class="btn btn-default">返回</button>

        <hr>

    </div>

    @Html.Partial("_Message")
</div>