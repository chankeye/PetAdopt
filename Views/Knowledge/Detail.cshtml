@{
    ViewBag.Title = "詳細知識文章";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/KnowledgeDetailCtrl.js"></script>
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">標題</label>
            <div class="col-sm-4">
                <label id="title" name="title"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">內容</label>
            <div class="col-sm-4">
                <label id="content" name="content"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">分類</label>
            <div class="col-sm-4">
                <label id="selOptionsClasses" name="selOptionsClasses"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn2" type="button" class="btn btn-primary">返回</button>
            </div>
        </div>
    </div>

    <hr />

    <div>
        <div class="page-header">
            <h2>留言</h2>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>內容</th>
                    <th>發佈者</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: $root.history">
                <tr>
                    <td hidden="true"><span data-bind="text: Id"></span></td>
                    <td><span data-bind="text: Date"></span></td>
                    <td><span data-bind="text: Message"></span></td>
                    <td><span data-bind="text: Account"></span></td>
                </tr>
            </tbody>
            <tfoot>
                <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
            </tfoot>
        </table>
        <!--pagination-->
        @Html.Partial("_Pagination")
        <!--pagination-->
    </div>

    <form id="commentForm" class="form-horizontal" method="POST" name="form1">
        <div class="container">
            <div class="form-group">
                <textarea id="message" name="message" class="form-control required" maxlength="100" required></textarea>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-7">
                    <button id="btn1" type="button" class="btn btn-primary" data-loading-text="處理中...">新增</button>
                    <button id="btnReset" type="reset" class="btn btn-default">清除</button>
                </div>
            </div>
        </div>
    </form>
</div>
