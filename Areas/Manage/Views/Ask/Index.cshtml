@{
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../../../Scripts/manage/ctrls/AskCtrl.js"></script>
}

<div class="page-header">
    <h2>新增問題</h2>
</div>
<div>
    <form id="commentForm" class="form-horizontal" method="POST" name="form1">
        <legend class="text-info">
            <i class="fa fa-check"></i>
            必填欄位
        </legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">標題</label>
            <div class="col-sm-4">
                <input id="title" name="title" class="form-control required" maxlength="50" placeholder="請輸入標題" required autofocus />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">內容</label>
            <div class="col-sm-4">
                <textarea id="content" name="content" rows="8" class="form-control required" maxlength="200" placeholder="請輸入內容" required></textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">分類</label>
            <div class="col-sm-4">
                <select id="selOptionsClasses" class="form-control required"
                        data-bind="options: classes, optionsText: 'Word', optionsValue: 'Id'"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn1" type="button" class="btn btn-primary" data-loading-text="處理中...">新增</button>
                <button id="btn2" type="reset" class="btn btn-default">清除</button>
            </div>
        </div>
    </form>

    <hr />

    <div class="page-header">
        <h2>問題列表</h2>
    </div>
    @Html.Partial("_Search")
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>序號</th>
                <th>標題</th>
                <th>日期</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: $root.history">
            <tr>
                <td><a href='#' data-bind="click: $root.removeAsk">移除</a></td>
                <td><a href='#' data-bind="click: $root.editAsk">編輯</a></td>
                <td><span data-bind="text: Id"></span></td>
                <td><span data-bind="text: Title"></span></td>
                <td><span data-bind="text: Date"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    @Html.Partial("_Pagination")
    <!--pagination-->
</div>
