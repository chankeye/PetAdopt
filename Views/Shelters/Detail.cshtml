@{
    ViewBag.Title = "收容所資訊";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/SheltersDetailCtrl.js"></script>
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">封面圖</label>
            <div class="col-sm-4">
                <img id="coverPhoto" name="coverPhoto" alt="封面圖" class="img-responsive img-thumbnail" src="../../Content/Images/default.jpg">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">名稱</label>
            <div class="col-sm-4">
                <label id="name" name="name"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">介紹</label>
            <div class="col-sm-4">
                <label id="introduction" name="introduction"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">電話</label>
            <div class="col-sm-4">
                <label id="phone" name="phone"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地區</label>
            <div class="col-sm-4">
                <label id="selOptionsAreas" name="selOptionsAreas"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地址</label>
            <div class="col-sm-4">
                <label id="address" name="address"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">收容所網址</label>
            <div class="col-sm-4">
                <label id="source" name="source"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn2" type="button" class="btn btn-primary">返回</button>
            </div>
        </div>
    </div>

    <hr />

    <div>
        <div class="page-header">
            <h2>留言</h2>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>內容</th>
                    <th>發佈者</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: $root.history">
                <tr>
                    <td hidden="true"><span data-bind="text: Id"></span></td>
                    <td><span data-bind="text: Date"></span></td>
                    <td><span data-bind="text: Message"></span></td>
                    <td><span data-bind="text: Account"></span></td>
                </tr>
            </tbody>
            <tfoot>
                <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
            </tfoot>
        </table>
        <!--pagination-->
        @Html.Partial("_Pagination")
        <!--pagination-->
    </div>

    <form id="commentForm" class="form-horizontal" method="POST" name="form1">
        <div class="container">
            <div class="form-group">
                <textarea id="message" name="message" class="form-control required" maxlength="100" required></textarea>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-7">
                    <button id="btn1" type="button" class="btn btn-primary" data-loading-text="處理中...">新增</button>
                    <button id="btnReset" type="reset" class="btn btn-default">清除</button>
                </div>
            </div>
        </div>
    </form>
</div>