@{
    ViewBag.Title = "我有問題";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/AskCtrl.js"></script>
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <a href="/Ask/New" class="btn btn-primary">發問</a>
    @Html.Partial("_Search")
    <table class="table table-hover">
        <thead>
            <tr>
                <th>標題</th>
                <th>日期</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: $root.history">
            <tr>
                <td hidden="true"><span data-bind="text: Id"></span></td>
                <td><a href="#" data-bind="text: Title, click: $root.detail"></a></td>
                <td><span data-bind="text: Date"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    @Html.Partial("_Pagination")
    <!--pagination-->
</div>
