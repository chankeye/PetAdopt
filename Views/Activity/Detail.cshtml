@{
    ViewBag.Title = "修改活動資訊";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/ActivityDetailCtrl.js"></script>
}
<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>
<div>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">封面圖</label>
            <div class="col-sm-4">
                <img id="coverPhoto" name="coverPhoto" alt="封面圖" class="img-responsive img-thumbnail" src="../../Content/Images/default.jpg">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">標題</label>
            <div class="col-sm-4">
                <label id="title" name="title"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">內容</label>
            <div class="col-sm-4">
                <label id="content" name="content"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地區</label>
            <div class="col-sm-4">
                <label id="selOptionsAreas" name="selOptionsAreas"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">地址</label>
            <div class="col-sm-4">
                <label id="address" name="address"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn2" type="button" class="btn btn-primary">返回</button>
            </div>
        </div>
    </div>

    <hr />

    <div class="page-header">
        <h2>留言</h2>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>序號</th>
                <th>日期</th>
                <th>內容</th>
                <th>發佈者</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: $root.history">
            <tr>
                <td><a href='#' data-bind="click: $root.removeMessage">移除</a></td>
                <td><span data-bind="text: Id"></span></td>
                <td><span data-bind="text: Date"></span></td>
                <td><span data-bind="text: Message"></span></td>
                <td><span data-bind="text: Account"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    @Html.Partial("_Pagination")
    <!--pagination-->
</div>
