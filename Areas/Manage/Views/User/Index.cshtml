@{
    ViewBag.Title = "使用者管理";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="/Areas/Manage/Scripts/ctrls/UserCtrl.js"></script>
}
<div class="page-header">
    <h2>新增使用者</h2>
</div>
<div>
    <form id="commentForm" class="form-horizontal" method="POST" name="form1">
        <legend class="text-info">
            <i class="fa fa-check"></i>
            必填欄位
        </legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">帳號</label>
            <div class="col-sm-4">
                <input id="account" name="account" class="form-control required" minlength="6" maxlength="20" placeholder="請輸入帳號" required autofocus />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">暱稱</label>
            <div class="col-sm-4">
                <input id="display" name="display" class="form-control required" maxlength="10" placeholder="請輸入暱稱" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Email</label>
            <div class="col-sm-4">
                <input id="email" name="email" class="form-control required email" maxlength="50" placeholder="請輸入Email" required />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">管理者</label>
            <div class="col-md-4">
                <label class="checkbox-inline">
                    <input type="checkbox" id="checkbox" name="checkbox">
                    是否為管理者
                </label>
            </div>
        </div>
        <legend class="text-info">
            <i class="fa fa-check"></i>
            選填欄位
        </legend>
        <div class="form-group">
            <label class="col-sm-2 control-label">手機</label>
            <div class="col-sm-4">
                <input id="mobile" name="mobile" class="form-control" minlength="10" maxlength="10" placeholder="例:0912345678" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="btn1" type="button" class="btn btn-primary" data-loading-text="處理中...">新增</button>
                <button id="btn2" type="reset" class="btn btn-default">清除</button>
            </div>
        </div>
    </form>

    <hr />

    <div class="page-header">
        <h2>使用者列表</h2>
    </div>
    <div>
        <input id="search" name="search" type="search" placeholder="請輸入文章標題" />
        <button id="btn3" type="button" data-loading-text="查詢中...">查詢</button>
        <br />
        <input id="checkAll" name="checkAll" type="checkbox" />
        <label for="checkAll">完全比對</label>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th>序號</th>
                <th>帳號</th>
                <th>加入日期</th>
                <th>是否停用中</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: history">
            <tr>
                <td><a href='#' data-bind="click: $root.removeUser">移除</a></td>
                <td><a href='#' data-bind="click: $root.editUser">編輯</a></td>
                <td><span data-bind="text: Id"></span></td>
                <td><span data-bind="text: Account"></span></td>
                <td><span data-bind="text: Date"></span></td>
                <td><span data-bind="text: IsDisable"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    <div class="pagination clearfix">
        <span class="prev"><a href="#">&lt;&lt; Previous</a></span>
        <ul class="pagi"></ul>
        <span class="next"><a href="#">Next &gt;&gt;</a></span>
    </div>
    <!--pagination-->
</div>
