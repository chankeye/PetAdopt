@{
    ViewBag.Title = "收容所資訊";
    Layout = "../Shared/_Layout.cshtml";
}
@section Scripts
{
    <script src="../../Scripts/ctrls/SheltersCtrl.js"></script>
}
<div class="page-header">
    <h2>收容所列表</h2>
</div>
<div>
    <a href="/Shelters/New" class="btn btn-primary">新增收容所</a>
    @Html.Partial("_Search")
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>名稱</th>
                <th>地區</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: history">
            <tr>
                <td hidden="true"><span data-bind="text: Id"></span></td>
                <td>
                    <div data-bind="if:Photo">
                        <img alt="封面圖" class="list-img" data-bind="attr:{src: '../../Content/uploads/' + Photo}">
                    </div>
                    <div data-bind="ifnot:Photo">
                        <img alt="封面圖" class="list-img" src="../../Content/Images/default.jpg">
                    </div>
                </td>
                <td><a href="#" data-bind="text: Name, click: $root.detail"></a></td>
                <td><span data-bind="text: Area"></span></td>
            </tr>
        </tbody>
        <tfoot>
            <tr><td data-bind="visible: responseMessage().trim() !== '', text: responseMessage"></td></tr>
        </tfoot>
    </table>
    <!--pagination-->
    @Html.Partial("_Pagination")
    <!--pagination-->
</div>
