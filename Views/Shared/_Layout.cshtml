@{
    var authCookie = Request.Cookies[FormsAuthentication.FormsCookieName];

    var isLogin = false;
    if (authCookie != null)
    {
        isLogin = true;
    }
}

<!DOCTYPE html>

<html>
<head>
    @* meta *@
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @*<link rel="icon" href="../../favicon.ico">*@
    <title>艾認養</title>

    @* load css *@
    <link href="../../Content/mvcfileupload/vendor/bootstrap.min.css" rel="stylesheet" />
    <link href="../../Content/font-awesome.css" rel="stylesheet" />
    <link href="../../Content/typeahead.js-bootstrap.css" rel="stylesheet" />
    <link href="../../Content/typeahead.js-bootstrap.fixed.css" rel="stylesheet" />
    <link href="../../Content/carousel.css" rel="stylesheet">
    <link href="../../Content/_site.css" rel="stylesheet" />

    @RenderSection("style", false)

    @* load js *@
    <script src="../../Scripts/jquery-2.1.1.js"></script>
    <script src="../../Scripts/jquery-ui-1.10.4.js"></script>
    <script src="../../Scripts/jquery.validate.js"></script>
    <script src="../../Scripts/knockout-3.1.0.debug.js"></script>
    <script src="../../Scripts/mvcfileupload/vendor/bootstrap.min.js"></script>
    <script src="../../Scripts/typeahead.js"></script>
    <script src="../../Scripts/ckeditor/ckeditor.js"></script>
    <script src="../../Scripts/ctrls/pagination.js"></script>
    <script src="../../Scripts/locale/common.js"></script>
    <script src="../../Scripts/hogan-2.0.0.js"></script>
    <script src="../../Scripts/ctrls/Carousel.js"></script>
    <script src="//www.google.com/jsapi"></script>

    <script src="../../Scripts/_app.js"></script>

    @RenderSection("Scripts", false)
</head>
<body>
    @* navbar *@
    <div class="navbar-wrapper">
        <div class="container">

            <div class="navbar navbar-inverse navbar-static-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">艾認養</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown">最新資訊 <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/News" title="最新消息">一定要知道</a></li>
                                    <li><a href="/Activity" title="最新活動">趕快去參加</a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown">動物資訊 <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/Animal/New" title="送養動物">尋找有緣人</a></li>
                                    <li><a href="/Animal" title="待認養動物">帶它回家</a></li>
                                    <li><a href="/Help" title="需要你立即前往救援的動物們">即刻救援</a></li>
                                </ul>
                            </li>
                            <li><a href="/Shelters" title="全台收容所資訊">收容所資訊</a></li>
                            <li><a href="/Blog" title="部落格文章">它與他的故事</a></li>
                            <li class="dropdown">
                                <a href="" class="dropdown-toggle" data-toggle="dropdown">知識問答 <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="/Ask" title="問與答">我有問題</a></li>
                                    <li><a href="/Knowledge" title="相關知識">增廣見聞</a></li>
                                </ul>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            @if (isLogin)
                            {
                                <li class="dropdown">

                                    <a href="" class="dropdown-toggle" data-toggle="dropdown">哈囉!! @User.Identity.Name 您好 <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="/Account/ChangePassword" title="變更密碼">變更密碼</a></li>
                                        <li><a href="/Account" title="會員中心">會員中心</a></li>
                                        <li><a href="/Account/SignOut" title="登出" target="_self">登出</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li><a href="/Account/Register" title="註冊會員">註冊會員</a></li>
                                <li><a href="/Account/Login" title="登入">登入</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1" class=""></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>
        <div class="carousel-inner" data-bind="foreach: imgList">
            <div data-bind="attr:{class: Class}">
                <img data-bind="attr:{src: '../../Content/uploads/' + Photo}" alt="即將安樂死動物">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>處死日：<label data-bind="text: EndDate"></label></h1>
                        <p><label data-bind="text: Title"></label></p>
                        <p><a class="btn btn-lg btn-primary" href="#" data-bind="click: $root.detail" role="button">立即認養</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div><!-- /.carousel -->
    @* container *@
    <div id="mainContiner">
        @RenderBody()
    </div>
    <div>
    </div>
    <hr>
    <footer class="container">
        <p>&copy; LoveAdopt 2014 認養代替購買，就從"艾認養"開始…</p>
    </footer>
</body>
</html>